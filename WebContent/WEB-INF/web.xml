<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>br.fiap.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.fiap.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CadastroUsuarioServlet</servlet-name>
        <servlet-class>br.fiap.controller.CadastroUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroUsuarioServlet</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ComprarServlet</servlet-name>
        <servlet-class>br.fiap.controller.ComprarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComprarServlet</servlet-name>
        <url-pattern>/comprar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PesquisarPassageiroServlet</servlet-name>
        <servlet-class>br.fiap.controller.PesquisarPassageiroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PesquisarPassageiroServlet</servlet-name>
        <url-pattern>/pesquisarPassageiro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PesquisarVendaServlet</servlet-name>
        <servlet-class>br.fiap.controller.PesquisarVendaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PesquisarVendaServlet</servlet-name>
        <url-pattern>/pesquisarVenda</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListarVendasServlet</servlet-name>
        <servlet-class>br.fiap.controller.ListarVendasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarVendasServlet</servlet-name>
        <url-pattern>/listar</url-pattern>
    </servlet-mapping>

</web-app>
